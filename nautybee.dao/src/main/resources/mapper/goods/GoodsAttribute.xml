<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.nautybit.nautybee.dao.goods.GoodsAttributeDao">

    <resultMap id = "BaseResultMap" type = "com.nautybit.nautybee.entity.goods.GoodsAttribute"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "goods_id" property = "goodsId" />
        <result column = "attr_id" property = "attrId" />
        <result column = "attr_value" property = "attrValue" />
    </resultMap>

    <!--用于搜索返回视图-->
    <resultMap id="GoodsAttributeViewMap" type="com.nautybit.nautybee.view.goods.GoodsAttributeView"
               extends="COMMON.BASE_RESULT_MAP">
        <result column = "goods_id" property = "goodsId" />
        <result column = "attr_id" property = "attrId" />
        <result column = "attr_value" property = "attrValue" />
        <result column = "attr_name" property = "attrName" />

    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "goodsId != null">
                    and goods_id = #{goodsId}
                </if>
                <if test = "attrId != null">
                    and attr_id = #{attrId}
                </if>
                <if test = "attrValue != null">
                    and attr_value = #{attrValue}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test = "attrId != null">
                attr_id = #{attrId},
            </if>
            <if test = "attrValue != null">
                attr_value = #{attrValue}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_goods_attribute
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_goods_attribute
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_goods_attribute
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_goods_attribute
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_goods_attribute
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_goods_attribute
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_goods_attribute (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        goods_id,
        attr_id,
        attr_value
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{goodsId},
        #{attrId},
        #{attrValue}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_goods_attribute
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <!-- 根据goodsId列表查询商品 -->
    <select id="queryByGoodsIdList" resultMap="GoodsAttributeViewMap">
        select
        a.*,b.attr_name
        from nautybee_goods_attribute a,nautybee_attribute b
        where a.attr_id = b.id
        and a.is_deleted='N' and b.is_deleted='N'
        and a.goods_id in
        (
        <foreach collection="list" index="index" item="goodsId" separator=",">
            #{goodsId}
        </foreach>
        )
        order by a.goods_id,b.attr_order
    </select>

</mapper>
