<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.nautybit.nautybee.dao.goods.GoodsPicDao">

    <resultMap id = "BaseResultMap" type = "com.nautybit.nautybee.entity.goods.GoodsPic"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "spu_id" property = "spuId" />
        <result column = "img_url" property = "imgUrl" />
        <result column = "img_desc" property = "imgDesc" />
        <result column = "img_order" property = "imgOrder" />
        <result column = "is_main" property = "isMain" />
    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "spuId != null">
                    and spu_id = #{spuId}
                </if>
                <if test = "imgUrl != null">
                    and img_url = #{imgUrl}
                </if>
                <if test = "imgDesc != null">
                    and img_desc = #{imgDesc}
                </if>
                <if test = "imgOrder != null">
                    and img_order = #{imgOrder}
                </if>
                <if test = "isMain != null">
                    and is_main = #{isMain}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "spuId != null">
                spu_id = #{spuId},
            </if>
            <if test = "imgUrl != null">
                img_url = #{imgUrl},
            </if>
            <if test = "imgDesc != null">
                img_desc = #{imgDesc},
            </if>
            <if test = "imgOrder != null">
                img_order = #{imgOrder},
            </if>
            <if test = "isMain != null">
                is_main = #{isMain}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_goods_pic
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_goods_pic
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_goods_pic
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_goods_pic
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_goods_pic
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_goods_pic
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_goods_pic (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        spu_id,
        img_url,
        img_desc,
        img_order,
        is_main
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{spuId},
        #{imgUrl},
        #{imgDesc},
        #{imgOrder},
        #{isMain}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_goods_pic
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

</mapper>
