                <if test = "visitNum != null">
                    and visit_num = #{visitNum}
                </if>
                <if test = "goodsBrief != null">
                    and goods_brief = #{goodsBrief}
                </if>
                <if test = "goodsDesc != null">
                    and goods_desc = #{goodsDesc}
                </if>
                <if test = "keywords != null">
                    and keywords = #{keywords}
                </if>
                <if test = "buyMin != null">
                    and buy_min = #{buyMin}
                </if>
                <if test = "buyStep != null">
                    and buy_step = #{buyStep}
                </if>
                <if test = "stepPriceCfg != null">
                    and step_price_cfg = #{stepPriceCfg}
                </if>
                <if test = "showOrder != null">
                    and show_order = #{showOrder}
                </if>
                <if test = "remark != null">
                    and remark = #{remark}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "spuSn != null">
                spu_sn = #{spuSn},
            </if>
            <if test = "storeId != null">
                store_id = #{storeId},
            </if>
            <if test = "catId != null">
                cat_id = #{catId},
            </if>
            <if test = "goodsName != null">
                goods_name = #{goodsName},
            </if>
            <if test = "goodsPrice != null">
                goods_price = #{goodsPrice},
            </if>
            <if test = "alipayDiscount != null">
                alipay_discount = #{alipayDiscount},
            </if>
            <if test = "wechatpayDiscount != null">
