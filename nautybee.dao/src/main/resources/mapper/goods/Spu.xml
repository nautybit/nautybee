    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "spuSn != null">
                    and spu_sn = #{spuSn}
                </if>
                <if test = "storeId != null">
                    and store_id = #{storeId}
                </if>
                <if test = "catId != null">
                    and cat_id = #{catId}
                </if>
                <if test = "goodsName != null">
                    and goods_name = #{goodsName}
                </if>
                <if test = "goodsPrice != null">
                    and goods_price = #{goodsPrice}
                </if>
                <if test = "alipayDiscount != null">
                    and alipay_discount = #{alipayDiscount}
                </if>
                <if test = "wechatpayDiscount != null">
                    and wechatpay_discount = #{wechatpayDiscount}
                </if>
                <if test = "unionpayDiscount != null">
                    and unionpay_discount = #{unionpayDiscount}
                </if>
                <if test = "unit != null">
                    and unit = #{unit}
                </if>
                <if test = "spuImg != null">
                    and spu_img = #{spuImg}
                </if>
                <if test = "spuIcon != null">
                    and spu_icon = #{spuIcon}
                </if>
                <if test = "goodsType != null">
                    and goods_type = #{goodsType}
                </if>
                <if test = "goodsNickName != null">
                    and goods_nick_name = #{goodsNickName}
                </if>
                <if test = "saleVolume != null">
