            </if>
            <if test = "goodsDesc != null">
                goods_desc = #{goodsDesc},
            </if>
            <if test = "keywords != null">
                keywords = #{keywords},
            </if>
            <if test = "buyMin != null">
                buy_min = #{buyMin},
            </if>
            <if test = "buyStep != null">
                buy_step = #{buyStep},
            </if>
            <if test = "stepPriceCfg != null">
