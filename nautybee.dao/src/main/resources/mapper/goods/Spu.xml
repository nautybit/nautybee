    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_spu
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_spu
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_spu
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_spu
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_spu
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_spu
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_spu (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        spu_sn,
        store_id,
        cat_id,
        goods_name,
        goods_price,
        alipay_discount,
        wechatpay_discount,
        unionpay_discount,
        unit,
        spu_img,
        spu_icon,
        goods_type,
        goods_nick_name,
        sale_volume,
        visit_num,
        goods_brief,
        goods_desc,
        keywords,
        buy_min,
        buy_step,
        step_price_cfg,
        show_order,
        remark
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{spuSn},
        #{storeId},
        #{catId},
        #{goodsName},
        #{goodsPrice},
        #{alipayDiscount},
        #{wechatpayDiscount},
        #{unionpayDiscount},
        #{unit},
        #{spuImg},
        #{spuIcon},
        #{goodsType},
        #{goodsNickName},
        #{saleVolume},
        #{visitNum},
        #{goodsBrief},
        #{goodsDesc},
        #{keywords},
        #{buyMin},
        #{buyStep},
        #{stepPriceCfg},
        #{showOrder},
        #{remark}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_spu
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <!-- 查询 -->
    <select id = "queryListOfCategory" resultMap = "SpuView">
        select
        a.*,b.cat_name
        from nautybee_spu a,nautybee_category b
        where a.cat_id = b.id
        and a.is_deleted = 'N'
        and b.is_deleted = 'N'
        order by b.cat_order,a.show_order
    </select>

</mapper>
