<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.nautybit.nautybee.dao.goods.StockDao">

    <resultMap id = "BaseResultMap" type = "com.nautybit.nautybee.entity.goods.Stock"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "goods_id" property = "goodsId" />
        <result column = "spu_id" property = "spuId" />
        <result column = "goods_num" property = "goodsNum" />
    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "goodsId != null">
                    and goods_id = #{goodsId}
                </if>
                <if test = "spuId != null">
                    and spu_id = #{spuId}
                </if>
                <if test = "goodsNum != null">
                    and goods_num = #{goodsNum}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test = "spuId != null">
                spu_id = #{spuId},
            </if>
            <if test = "goodsNum != null">
                goods_num = #{goodsNum}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_stock
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_stock
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_stock
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_stock
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_stock
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_stock
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_stock (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        goods_id,
        spu_id,
        goods_num
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{goodsId},
        #{spuId},
        #{goodsNum}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_stock
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <!-- 更新库存 -->
    <update id = "updateGoodsNum">
        update nautybee_stock
        set goods_num = #{goodsNum}
        where goods_id = #{goodsId}
    </update>

    <!-- 根据goodsId查询 -->
    <select id = "selectByGoodsId" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_stock
        where goods_id = #{goodsId}
        and is_deleted='N'
    </select>
</mapper>
