        <result column = "sales_amount" property = "salesAmount" />
        <result column = "receipts_amount" property = "receiptsAmount" />
        <result column = "avg_price" property = "avgPrice" />
        <result column = "ori_price" property = "oriPrice" />
        <result column = "alipay_discount" property = "alipayDiscount" />
        <result column = "wechatpay_discount" property = "wechatpayDiscount" />
        <result column = "unionpay_discount" property = "unionpayDiscount" />
        <result column = "base_price" property = "basePrice" />
        <result column = "return_count" property = "returnCount" />
        <result column = "store_id" property = "storeId" />
        <result column = "goods_sn" property = "goodsSn" />
