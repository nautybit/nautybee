            </if>
            <if test = "salesAmount != null">
                sales_amount = #{salesAmount},
            </if>
            <if test = "receiptsAmount != null">
                receipts_amount = #{receiptsAmount},
            </if>
            <if test = "avgPrice != null">
                avg_price = #{avgPrice},
            </if>
            <if test = "oriPrice != null">
                ori_price = #{oriPrice},
            </if>
            <if test = "alipayDiscount != null">
                alipay_discount = #{alipayDiscount},
            </if>
            <if test = "wechatpayDiscount != null">
                wechatpay_discount = #{wechatpayDiscount},
            </if>
            <if test = "unionpayDiscount != null">
                unionpay_discount = #{unionpayDiscount},
            </if>
            <if test = "basePrice != null">
                base_price = #{basePrice},
            </if>
