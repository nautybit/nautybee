    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_order_goods
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_order_goods
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_order_goods
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_order_goods
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_order_goods
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_order_goods
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_order_goods (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        order_id,
        goods_id,
        spu_id,
        prop_detail_id1,
        prop_detail_id2,
        prop_detail_name1,
        prop_detail_name2,
        discount_desc,
        goods_name,
        unit,
        goods_img,
        goods_number,
        sales_amount,
        receipts_amount,
        avg_price,
        ori_price,
        alipay_discount,
        wechatpay_discount,
        unionpay_discount,
        base_price,
        return_count,
        store_id,
        goods_sn
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{orderId},
        #{goodsId},
        #{spuId},
        #{propDetailId1},
        #{propDetailId2},
        #{propDetailName1},
        #{propDetailName2},
        #{discountDesc},
        #{goodsName},
        #{unit},
        #{goodsImg},
        #{goodsNumber},
        #{salesAmount},
        #{receiptsAmount},
        #{avgPrice},
        #{oriPrice},
        #{alipayDiscount},
        #{wechatpayDiscount},
        #{unionpayDiscount},
        #{basePrice},
        #{returnCount},
        #{storeId},
        #{goodsSn}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_order_goods
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <!-- 根据orderId查询 -->
    <select id = "selectByOrderId" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_order_goods
        where order_id = #{orderId}
        and is_deleted = 'N'
    </select>

    <!-- 根据orderSn查询 -->
    <select id = "selectByOrderSn" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_order_goods a,nautybee_order b
        where a.order_id = b.id
        and b.order_sn = #{orderSn}
        and a.is_deleted = 'N'
        and b.is_deleted = 'N'
    </select>

</mapper>
