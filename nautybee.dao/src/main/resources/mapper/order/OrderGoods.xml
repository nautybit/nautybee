                <if test = "goodsId != null">
                    and goods_id = #{goodsId}
                </if>
                <if test = "spuId != null">
                    and spu_id = #{spuId}
                </if>
                <if test = "propDetailId1 != null">
                    and prop_detail_id1 = #{propDetailId1}
                </if>
                <if test = "propDetailId2 != null">
                    and prop_detail_id2 = #{propDetailId2}
                </if>
                <if test = "propDetailName1 != null">
                    and prop_detail_name1 = #{propDetailName1}
                </if>
                <if test = "propDetailName2 != null">
                    and prop_detail_name2 = #{propDetailName2}
                </if>
                <if test = "discountDesc != null">
                    and discount_desc = #{discountDesc}
                </if>
                <if test = "goodsName != null">
                    and goods_name = #{goodsName}
                </if>
                <if test = "unit != null">
                    and unit = #{unit}
                </if>
                <if test = "goodsImg != null">
                    and goods_img = #{goodsImg}
                </if>
                <if test = "goodsNumber != null">
                    and goods_number = #{goodsNumber}
                </if>
                <if test = "salesAmount != null">
                    and sales_amount = #{salesAmount}
                </if>
                <if test = "receiptsAmount != null">
                    and receipts_amount = #{receiptsAmount}
                </if>
                <if test = "avgPrice != null">
                    and avg_price = #{avgPrice}
                </if>
                <if test = "oriPrice != null">
                    and ori_price = #{oriPrice}
                </if>
                <if test = "alipayDiscount != null">
                    and alipay_discount = #{alipayDiscount}
                </if>
                <if test = "wechatpayDiscount != null">
                    and wechatpay_discount = #{wechatpayDiscount}
                </if>
                <if test = "unionpayDiscount != null">
                    and unionpay_discount = #{unionpayDiscount}
                </if>
                <if test = "basePrice != null">
                    and base_price = #{basePrice}
                </if>
                <if test = "returnCount != null">
                    and return_count = #{returnCount}
                </if>
                <if test = "storeId != null">
                    and store_id = #{storeId}
                </if>
                <if test = "goodsSn != null">
                    and goods_sn = #{goodsSn}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "orderId != null">
                order_id = #{orderId},
            </if>
            <if test = "goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test = "spuId != null">
                spu_id = #{spuId},
            </if>
            <if test = "propDetailId1 != null">
                prop_detail_id1 = #{propDetailId1},
            </if>
            <if test = "propDetailId2 != null">
                prop_detail_id2 = #{propDetailId2},
            </if>
            <if test = "propDetailName1 != null">
                prop_detail_name1 = #{propDetailName1},
            </if>
            <if test = "propDetailName2 != null">
