<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.nautybit.nautybee.dao.recommend.RecommendDao">

    <resultMap id = "BaseResultMap" type = "com.nautybit.nautybee.entity.recommend.Recommend"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "to_user" property = "toUser" />
        <result column = "to_user_name" property = "toUserName" />
        <result column = "from_user" property = "fromUser" />
        <result column = "from_user_name" property = "fromUserName" />
        <result column = "is_valid" property = "isValid" />
        <result column = "remark" property = "remark" />
    </resultMap>

    <resultMap id = "RecommendViewMap" type = "com.nautybit.nautybee.view.recommend.RecommendView"
               extends = "COMMON.BASE_RESULT_MAP">
        <result column = "to_user" property = "toUser" />
        <result column = "to_user_name" property = "toUserName" />
        <result column = "from_user" property = "fromUser" />
        <result column = "from_user_name" property = "fromUserName" />
        <result column = "is_valid" property = "isValid" />
        <result column = "remark" property = "remark" />

        <result column = "order_gmt_create" property = "orderGmtCreate" />
        <result column = "goods_name" property = "goodsName" />
        <result column = "student_name" property = "studentName" />

    </resultMap>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "toUser != null">
                    and to_user = #{toUser}
                </if>
                <if test = "toUserName != null">
                    and to_user_name = #{toUserName}
                </if>
                <if test = "fromUser != null">
                    and from_user = #{fromUser}
                </if>
                <if test = "fromUserName != null">
                    and from_user_name = #{fromUserName}
                </if>
                <if test = "isValid != null">
                    and is_valid = #{isValid}
                </if>
                <if test = "remark != null">
                    and remark = #{remark}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <include refid = "COMMON.BASE_UPDATE_SET" />
            <if test = "toUser != null">
                to_user = #{toUser},
            </if>
            <if test = "toUserName != null">
                to_user_name = #{toUserName},
            </if>
            <if test = "fromUser != null">
                from_user = #{fromUser},
            </if>
            <if test = "fromUserName != null">
                from_user_name = #{fromUserName},
            </if>
            <if test = "isValid != null">
                is_valid = #{isValid},
            </if>
            <if test = "remark != null">
                remark = #{remark}
            </if>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from nautybee_recommend
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_recommend
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.PAGE" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_recommend
        where id = #{id}
    </select>

    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update nautybee_recommend
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update nautybee_recommend
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update nautybee_recommend
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into nautybee_recommend (
        <include refid = "COMMON.BASE_INSERT_COLUMN" />
        to_user,
        to_user_name,
        from_user,
        from_user_name,
        is_valid,
        remark
        )
        values (
        <include refid = "COMMON.BASE_INSERT_VALUE" />
        #{toUser},
        #{toUserName},
        #{fromUser},
        #{fromUserName},
        #{isValid},
        #{remark}
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update nautybee_recommend
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <!-- 根据to_user和from_user查询 -->
    <select id = "selectByToUser" resultMap = "BaseResultMap">
        select
        <include refid = "COMMON.ALL_COLUMN_LIST" />
        from nautybee_recommend
        where to_user = #{toUser}
        and is_deleted='N'
        limit 1
    </select>

    <!-- 根据to_user和from_user查询 -->
    <select id = "selectByFromUser" resultMap = "RecommendViewMap">
        select a.gmt_create,a.to_user_name,d.gmt_create as order_gmt_create,d.goods_name
        from nautybee_recommend a
        left join nautybee_order_ext b on a.id = b.recommend_id and b.is_deleted = 'N'
        left join nautybee_order c on b.id = c.id and c.is_deleted = 'N'
        left join nautybee_order_goods d on d.order_id = c.id and d.is_deleted = 'N'
        where a.from_user = #{fromUser}
        and a.is_deleted = 'N'
        order by a.id desc
    </select>

</mapper>
